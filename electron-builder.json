{
  "productName": "iohook-electron-webpack-integration",
  "directories": {
    "output": "dist/"
  },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/"
    ],
    "win": {
      "target": "nsis",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": true
    },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
